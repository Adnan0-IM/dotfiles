{
  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "top",
  "github.copilot.nextEditSuggestions.enabled": true,
  "glassit.alpha": 220,
  "chat.instructionsFilesLocations": {
    ".github/instructions": true,
    "/tmp/postman-collections-post-response.instructions.md": true,
    "/tmp/postman-collections-pre-request.instructions.md": true,
    "/tmp/postman-folder-post-response.instructions.md": true,
    "/tmp/postman-folder-pre-request.instructions.md": true,
    "/tmp/postman-http-request-post-response.instructions.md": true,
    "/tmp/postman-http-request-pre-request.instructions.md": true
  },
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.hidesExplorerArrows": true,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.tree.enableStickyScroll": false,
  "workbench.tree.indent": 12,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "editor.minimap.enabled": false,
  "explorer.compactFolders": false,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "window.title": " ",
  "editor.fontFamily": "Fira Code,Jetbrains Mono,  Courier New, monospace",
  "terminal.integrated.fontFamily": "Jetbrains Mono, Fira Code",
  "workbench.colorTheme": "Catppuccin Mocha",
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "chat.commandCenter.enabled": false,
  "editor.fontLigatures": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "workbench.panel.showLabels": false,
  // === Neovim integration ===
  /*  "vscode-neovim.neovimInitVimPaths.linux": "/home/adnan/dotfiles/nvim/.config/nvim/init.lua",
  "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
  "debug.disassemblyView.showSourceCode": false, */

  /**
   * VIM Options
   */
  "vim.incsearch": true,
  "vim.searchHighlightColor": "#f6ff0080",
  "vim.searchHighlightTextColor": "#fff",
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.smartRelativeLine": true,
  "vim.surround": true,
  "vim.easymotion": true,

  // load init.vim
  "vim.vimrc.enable": true,
  "vim.vimrc.path": "~/.config/vscode/init.vim",

  // "vim.leader": "<space>", Not set due to conflict with keybinds.json chords. Using default leader "\" instead.
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<Esc>"],
      "when": ["editorFocus"],
      "commands": [":nohl"], // Clears highlight of current search
      "silent": true
    }
  ],
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  "files.autoSave": "afterDelay",
  "git.autofetch": true,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "window.menuBarVisibility": "toggle",
  "editor.fontSize": 15
}
