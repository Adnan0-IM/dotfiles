# Font Configuration
font-family = "JetBrainsMono NF Regular"
window-title-font-family = JetBrainsMono Nerd Font
font-size = 12

# Window Configuration
window-decoration = false
window-padding-x = 10
window-padding-y = 10
window-padding-balance = false
window-save-state = always
window-inherit-working-directory = true
background-opacity = 0.7
background-blur-radius = 32
gtk-titlebar = false
gtk-single-instance = true

# Cursor Configuration
cursor-style = block
cursor-style-blink = true

# Scrollback
scrollback-limit = 10000

# Terminal features
mouse-hide-while-typing = true
mouse-scroll-multiplier = 3
copy-on-select = clipboard
confirm-close-surface = false

# Disable annoying copied to clipboard
app-notifications = no-clipboard-copy,no-config-reload

# Shell integration
shell-integration = detect
shell-integration-features = cursor,sudo,title,no-cursor

# Material 3 UI elements
unfocused-split-opacity = 0.7
unfocused-split-fill = #44464f

# Key bindings
keybind = `>r=reload_config
keybind = `>x=close_surface
keybind = `>n=new_window

# tabs 
keybind = `>c=new_tab
keybind = `>shift+l=next_tab
keybind = `>shift+h=previous_tab
keybind = `>comma=move_tab:-1
keybind = `>period=move_tab:1

# quick tab switch
keybind = `>1=goto_tab:1
keybind = `>2=goto_tab:2
keybind = `>3=goto_tab:3
keybind = `>4=goto_tab:4
keybind = `>5=goto_tab:5
keybind = `>6=goto_tab:6
keybind = `>7=goto_tab:7
keybind = `>8=goto_tab:8
keybind = `>9=goto_tab:9

# split
keybind = `>\=new_split:right
keybind = `>-=new_split:down
keybind = ctrl+j=goto_split:bottom
keybind = `>k=goto_split:top
keybind = `>h=goto_split:left
keybind = `>l=goto_split:right
keybind = `>m=toggle_split_zoom
keybind = `>e=equalize_splits

# other
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard
keybind = ctrl+shift+n=new_window
keybind = ctrl+t=new_tab
keybind = ctrl+plus=increase_font_size:1
keybind = ctrl+minus=decrease_font_size:1
keybind = ctrl+zero=reset_font_size
keybind = shift+enter=text:\n

# Theme
theme = dankcolors